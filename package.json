{
  "name": "retail-analytics-platform-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --testPathIgnorePatterns=integration --watchAll=false",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json",
    "test:rag": "jest test/integration/rag-integration.spec.ts",
    "docker:build": "docker build -t retail-analytics-platform-backend .",
    "docker:run": "docker run -p 3000:3000 retail-analytics-platform-backend"
  },
  "dependencies": {
    "@langchain/community": "^1.0.4",
    "@langchain/core": "^1.0.6",
    "@langchain/groq": "^1.0.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "@xenova/transformers": "^2.17.2",
    "chromadb": "^3.1.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "globals": "^17.1.0",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.19.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "_moduleAliases": {
    "@/app": "./dist",
    "@/api": "./dist/api",
    "@/common": "./dist/common",
    "@/config": "./dist/config",
    "@/database": "./dist/database",
    "@/guards": "./dist/guards",
    "@/modules": "./dist/modules"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>",
      "test"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!(@xenova/transformers)/)"
    ],
    "moduleNameMapper": {
      "^@/app/(.*)$": "<rootDir>/src/$1",
      "^@/api/(.*)$": "<rootDir>/src/api/$1",
      "^@/common/(.*)$": "<rootDir>/src/common/$1",
      "^@/database/(.*)$": "<rootDir>/src/database/$1",
      "^@/guards/(.*)$": "<rootDir>/src/guards/$1",
      "^@/modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@xenova/transformers$": "<rootDir>/test/__mocks__/@xenova/transformers.js"
    }
  }
}
